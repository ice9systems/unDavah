<UserControl x:Class="unDavah_PoC.UVDTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unDavah_PoC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="TextBlock" TextWrapping="Wrap" Foreground="#FF00CC00" FontFamily="Source Code Pro,Consolas,MS Gothic,Courier New,NSimSun" FontSize="18" LineHeight="25" Padding="10,10,10,10" Background="Black"></TextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>
