<Window x:Class="unDavah_PoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:unDavah_PoC"
        mc:Ignorable="d"
        Title="[unDavah] Clipboard confirmation" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0" Background="#FFF7F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock Height="34" Margin="10,10,0,0" TextWrapping="Wrap" Text="The clipboard contains multiple lines of text. Would you like to continue?" VerticalAlignment="Top"/>
        <TextBox x:Name="clipboardContnt" Margin="10,50,0,10" TextWrapping="Wrap" Text="{Binding Path=contentStr}" Grid.ColumnSpan="1" FontFamily="Courier New" FontSize="18" VerticalScrollBarVisibility="Auto"/>
        <Button Content="OK" Margin="10,0,10,10.2" VerticalAlignment="Bottom" Click="Confirmed" Grid.Column="1" Height="19" BorderBrush="#FFF36B04" Background="#FFF49A55"/>
        <Button Content="Cancel" Margin="10,0,10,39" Click="Cancel" Grid.Column="1" Height="19" VerticalAlignment="Bottom" Background="#FF90E569" BorderBrush="#FF48B902"/>
    </Grid>
</Window>
