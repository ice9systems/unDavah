<Window x:Class="com.undavah.unDavah_PoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:com.undavah.unDavah_PoC"
        mc:Ignorable="d"
        Title="[unDavah] Clipboard confirmation" Height="400" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0" Background="#FFF7F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Height="34" Margin="10,10,99.6,0" TextWrapping="Wrap" Text="The clipboard contains multiple lines of text. Would you like to continue?" VerticalAlignment="Top" FontFamily="Meiryo UI" FontSize="16"/>
        <Border Margin="10,50,10,39" BorderThickness="1" BorderBrush="Black">
            <local:UVDTextBlock x:Name="clipboardContnt"/>
        </Border>
        <Button Content="OK" Click="Confirmed" Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="100" Height="19" BorderBrush="#FFF36B04" Background="#FFF49A55"/>
        <Button Content="Cancel" Click="Cancel" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinWidth="100" Height="19" Background="#FF90E569" BorderBrush="#FF48B902"/>
    </Grid>
</Window>
